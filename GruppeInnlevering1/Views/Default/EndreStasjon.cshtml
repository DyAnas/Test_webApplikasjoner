@model StasjonV

@{
    ViewBag.Title = "EndreStasjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EndreStasjon</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<input name="StasjonId" value="@Model.StasjonId" hidden />
    <div class="form-horizontal">
        <h4>StasjonV</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.StasjonNavn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StasjonNavn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StasjonNavn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbake til Liste stasjoner", "Stasjoner")
</div>
