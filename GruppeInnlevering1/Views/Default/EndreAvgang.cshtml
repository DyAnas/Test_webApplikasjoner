@model avgangs

@{
    ViewBag.Title = "EndreAvgang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EndreAvgang</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input name="AvgangId" value="@Model.AvgangId" hidden />
    <input name="StasjonId" value="@Model.StasjonId" hidden />
    <input name=" TogId" value="@Model.TogId" hidden />
    <div class="form-horizontal">
        <h4>Avgang</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AvgangId)

        <div class="form-group">
            @Html.LabelFor(model => model.Tid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Endre" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
