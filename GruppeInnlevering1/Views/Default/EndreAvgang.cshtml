    ViewBag.Title = "EndreAvgang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EndreAvgang</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input name="AvgangId" value="@Model.AvgangId" hidden />


    <div class="form-horizontal">
        <h4>avgangs</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Feil == true)
        {
            <p class="alert alert-danger">Endring er ikke vellykket</p>

        }
        else if(ViewBag.Feil == false)
        {
            <p class="alert alert-success">Endring er vellykket</p>
        }
        

        <div class="form-group">
            @Html.LabelFor(model => model.Tid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tid, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>
      
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Endre" class="btn btn-default" />

        </div>
     
    </div>
     
        }

