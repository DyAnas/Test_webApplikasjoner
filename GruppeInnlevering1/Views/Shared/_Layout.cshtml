<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="border-bottom-style: none;box-shadow:0px 1px 1px darkgrey; height:130px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                

            </div>
            <div class="navbar-collapse collapse">
                <div style="float:left;">
                    <a href='@Url.Action("Index", "Default")'>
                        <img src='@Url.Content("~/Content/vy_logo.png")' style="width:150px; " />
                    </a>
                </div>
                <div style="float:left; margin-top:15px;margin-left:100px;">
                    <ul class="nav navbar-nav" style="width:100%; font-size:large;">
                        <!--ny-->
                        @if (ViewBag.Innlogget == true)
                        {
                            <li>@Html.ActionLink("Hjem", "Index", "Default")</li>

                            <li>@Html.ActionLink("Kontrollpanel", "Login", "Default")</li>
                            <li style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><b class="glyphicon glyphicon-log-out" style="color:maroon;border:none;text-shadow:none;background:none;padding:15px;">@Html.ActionLink("Logg ut", "Registrer", "Default")</b></li>
                            /*<li class="glyphicon glyphicon-log-in" style="color:darkgreen;border:none;text-shadow:none;background:none;padding:15px;"></li>*/
                            <li style="padding:13px;font-weight:200;font-size:medium;color:#117c3f;float:right;border:groove 1px green;border-radius:86px;text-shadow: -1px 0 #3a5546, 0 0 #3a5546, 0 0 #3a5546, 0 -1px #3a5546;background-color:#e7f1eb;"><b class="glyphicon glyphicon-ok-circle" style="color:#7c7d7c;text-shadow:none;background:none;border:none;"></b>&nbsp;@Html.Label("Innlogget")</li>
                        }
                        else
                        {

                            <li>@Html.ActionLink("Hjem", "Index", "Default")</li>
                            <li>@Html.ActionLink("Registrer", "Registrer", "Default")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:10em; margin-left:9%;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VY</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
