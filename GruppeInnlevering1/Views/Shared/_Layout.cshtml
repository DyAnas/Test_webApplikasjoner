<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="border-bottom-style: none;box-shadow:0px 1px 1px darkgrey; height:130px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                

            </div>
            <div class="navbar-collapse collapse">
                <div style="float:left;">
                    <a href='@Url.Action("Index", "Default")'>
                        <img src='@Url.Content("~/Content/vy_logo.png")' style="width:150px; " />
                    </a>
                </div>
                <div style="float:left; margin-top:15px;margin-left:100px;">
                    <ul class="nav navbar-nav" style="font-size:large;">


                        <li>@Html.ActionLink("Home", "Index", "Default")</li>
                        <li>@Html.ActionLink("About", "Index", "Default")</li>
                        <li>@Html.ActionLink("Contact", "Index", "Default")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:10em; margin-left:9%;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VY</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
